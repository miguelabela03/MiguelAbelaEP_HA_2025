@model IEnumerable<Domain.Models.Poll>

@{
    ViewData["Title"] = "List";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div></div> <!-- Placeholder for left alignment (if needed) -->
        <a href="#" class="btn btn-outline-dark">Add a New Poll</a>
    </div>
    <h1 class="text-center">Polls</h1>

    <div class="row">
        @foreach (var poll in Model)
        {
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-header">
                        <b>@poll.Title</b>
                    </div>
                    <div class="card-body">
                        <a href="#" class="btn btn-outline-primary">View Details</a>
                    </div>
                    <div class="card-footer text-muted">
                        <a href="#" class="btn btn-outline-success">Vote</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
