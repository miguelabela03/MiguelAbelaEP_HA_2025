@model Domain.Models.Poll

@{
    ViewData["Title"] = "CreatePoll";
}

<div class="container mt-5">
    <!-- Page Title -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-center mx-auto">Create Poll</h1>
        <a asp-action="List" class="btn btn-secondary">Back to Polls List</a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Poll Details</h4>
        </div>
        <div class="card-body">
            <form asp-action="CreatePoll" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Poll Title -->
                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label">Poll Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter poll title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Option 1 -->
                <div class="form-group mb-3">
                    <label asp-for="Option1Text" class="form-label">Option 1</label>
                    <input asp-for="Option1Text" class="form-control" placeholder="Enter option 1" />
                    <span asp-validation-for="Option1Text" class="text-danger"></span>
                </div>

                <!-- Option 2 -->
                <div class="form-group mb-3">
                    <label asp-for="Option2Text" class="form-label">Option 2</label>
                    <input asp-for="Option2Text" class="form-control" placeholder="Enter option 2" />
                    <span asp-validation-for="Option2Text" class="text-danger"></span>
                </div>

                <!-- Option 3 -->
                <div class="form-group mb-3">
                    <label asp-for="Option3Text" class="form-label">Option 3</label>
                    <input asp-for="Option3Text" class="form-control" placeholder="Enter option 3" />
                    <span asp-validation-for="Option3Text" class="text-danger"></span>
                </div>

                <!-- Save Button -->
                <div class="text-end">
                    <button type="submit" class="btn btn-success px-4">Save Poll</button>
                </div>
            </form>
        </div>
    </div>
</div>
